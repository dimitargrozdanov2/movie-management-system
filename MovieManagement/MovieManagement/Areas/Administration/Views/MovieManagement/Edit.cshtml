@model MovieViewModel

@{
    ViewData["Title"] = "Edit Movie";
}

<h1 class="headerText">Edit Movie</h1>

<div class="form-row">
    <form class="col-lg-7" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Duration">Duration</label>
            <input class="form-control" asp-for="Duration" value="@Model.Duration" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Storyline">Storyline</label>
            <input class="form-control" asp-for="Storyline" value="@Model.Storyline" />
            <span asp-validation-for="Storyline" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Director">Director</label>
            <input class="form-control" asp-for="Director" value="@Model.Director" />
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">ImageUrl</label>
            <input class="form-control" asp-for="ImageUrl" value="@Model.ImageUrl" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button class="btn btn-warning" type="submit">Edit</button>
        </div>
    </form>
</div>