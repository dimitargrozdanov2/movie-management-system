@model MovieCreateViewModel

@{
    ViewData["Title"] = "Create Movie";
}

<h1 class="headerText">Create Movie</h1>

<div class="form-row">
    <form class="col-lg-7" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Duration">Duration</label>
            <input class="form-control" asp-for="Duration" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Storyline">Storyline</label>
            <input class="form-control" asp-for="Storyline" placeholder="Storyline" />
            <span asp-validation-for="Storyline" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Director">Director</label>
            <input class="form-control" asp-for="Director" placeholder="Director Name" />
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">ImageUrl</label>
            <input class="form-control" asp-for="ImageUrl" placeholder="Name of the image with extension" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GenreName">Genre Name</label>
            <select asp-for="GenreName" class="custom-select" asp-items="@Model?.GenreList"></select>
        </div>


        <div class="form-group">
            <button class="btn btn-warning" type="submit">Create</button>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Reset</a>
</div>

