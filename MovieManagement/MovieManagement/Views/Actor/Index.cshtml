@model ListActorViewModel

@{
    ViewData["Title"] = "List of Actors in an alphabetical order";

}

<table class="table table-hover col-md-10">

    <thead class="thead-dark">
        <tr>
            <th scope="col">CreatedOn</th>
            <th scope="col">Name</th>
            @*<th scope="col">Text</th>
            <th scope="col">Image</th>*@
        </tr>
    </thead>
    @foreach (var actor in Model.Actors)
    {
        <td>@actor.CreatedOn</td>
        <td><a asp-area="" asp-controller="Actor" asp-action="Details" asp-route-actorName="@actor.Name" class="text-dark">@actor.Name</a></td>
        <tr></tr>
    }
    <tbody></tbody>
</table>