@model MovieViewModel
@{
    ViewData["Title"] = "_RolePartial";
}

<div class="col-md-4 homeMovieListAlign">
    <div>
        <img src="~/images/@Model.ImageUrl" alt="Visual Studio" class="img-fluid" style="width: 100%; height:100px;" />
        <a asp-area="" asp-controller="Movie" asp-action="Details" asp-route-id="@Model.Name" class="text-dark">
            <h4>@Model.Name
            <span class="ratingInTitleToRight">☆@Model.Rating</span></h4>
        </a>
        <div class="genreTitleTag">@Model.Genre</div>
        <div class="">@Model.Storyline</div>
        <a asp-area="" asp-controller="Movie" asp-action="Watchlist" asp-route-id="@Model.Name" class="text-warning genreTitleTag">+ Add to Watchlist</a>
    </div>
</div>
