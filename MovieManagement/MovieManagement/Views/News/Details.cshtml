@model NewsViewModel

@{
    ViewData["Title"] = Model.Title;

}

<div class="container">
    <div class="form-row">
        <div class="p-3 mb-2 bg-light text-dark col-lg-8">
            <div class="dropdown rating-dropdown">
                <div class="form-row">
                    <div class="col-lg-3">
                        <h3>@Model.Title</h3>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="p-3 mb-2 bg-light text-dark col-lg-8">
            <img src="~/images/@Model.ImageUrl" alt="Movie Image" class="img-fluid" style="width: 100%; height:400px;" />
        </div>
        <div class="col-lg-2">
            @if (User.IsInRole("Admin"))
            {
                <a asp-area="Administration" asp-controller="NewsManagement" asp-action="Edit" asp-route-oldName="@Model.Title" class="btn btn-primary detailsMovieButton btn-block">Edit News</a>
                <a asp-area="Administration" asp-controller="NewsManagement" asp-action="Delete" asp-route-id="@Model.Title" class="btn btn-danger detailsMovieButton btn-block">Delete News</a>
            }
        </div>
    </div>
    <div class="form-row">
        <div class="p-3 mb-2 bg-light text-dark col-lg-8">
            <div class="form-group">
                <div class="d-flex justify-content-center" >
                   <p>@Model.Text</p>
                </div>
            </div>
        </div>
    </div>
