@model ListNewsViewModel

@{
    ViewData["Title"] = "Most Recent News";

}

<table class="table table-hover col-md-10">

    <thead class="thead-dark">
        <tr>
            <th scope="col">CreatedOn</th>
            <th scope="col">Title</th>
            <th scope="col">Text</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    @foreach (var news in Model.News)
    {
    <tr>
        <td>@news.CreatedOn</td>
        <td><a asp-area="" asp-controller="News" asp-action="Details" asp-route-id="@news.Title" class="text-dark">@news.Title</a></td>
        <td>@news.Text</td>
        <td><img src="~/images/@news.Image" style="width:300px; height:200px"></td>
    </tr>
    }
    <tbody></tbody>
</table>